{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "cassandra"
    },
    "spec": {
        "selector": {
            "app": "cassandra"
        },
        "ports": [
            {
                "name": "thrift",
                "protocol": "TCP",
                "port": 9160,
                "targetPort": 9160
            },
                        {
                "name": "cql",
                "protocol": "TCP",
                "port": 9042,
                "targetPort": 9042
            }
        ]
    }
}